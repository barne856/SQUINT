{
	"name": "SQUINT",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/git:1": {},
		"ghcr.io/mamba-org/devcontainer-features/micromamba:1": {
			"envFile": "/tmp/env.yml",
			"envName": "squint",
			"autoActivate": true
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"llvm-vs-code-extensions.vscode-clangd",
				"GitHub.copilot",
				"GitHub.copilot-chat",
				"ms-vscode.cmake-tools",
				"matepek.vscode-catch2-test-adapter"
			]
		}
	},
	"mounts": [
		"source=squint-build,target=${containerWorkspaceFolder}/build,type=volume"
	],
	// make vscode user own the workspace and all mounts
	"postCreateCommand": "sudo chown -R vscode:vscode ${containerWorkspaceFolder}",
	// prevent git dubious ownership
	"postStartCommand": "micromamba shell init --shell=bash && echo 'micromamba activate squint' >> ~/.bashrc && git config --global --add safe.directory ${containerWorkspaceFolder}"
}